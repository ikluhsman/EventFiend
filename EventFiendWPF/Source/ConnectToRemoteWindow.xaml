<Window x:Class="EventFiend.ConnectToRemoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventFiend"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Connect To" Height="120" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Label>Remote System</Label>
                <TextBox Name="textBoxRemoteSystem" Width="150"/>
            </StackPanel>
            <Button Name="btnConnect" Content="Connect" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5,15,5,5" Click="btnConnect_Click"/>
        </StackPanel>
    </Grid>
</Window>
